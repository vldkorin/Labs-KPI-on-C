// 1 part


Лабораторна робота №5.1. Послідовна перевірка умов*/
#include<stdio.h>/*підмикання бібліотеки stdio.h, використовує printf, scanf */
#include<math.h>/*підмикання бібліотеки math.h, використовує sqrt, cos*/
#include<stdlib.h>/*підмикання бібліотеки stdlib.h, використовує system*/
int main()
{
	/*Обчислення значення функції ,  заданої логічною залежністю.
	Використання послідовних умовних операторів*/
	float x, y, a, b;/*Введення змінної*/
	int ind;
	system("chcp 1251 & cls");
	printf("f(x) = cos (x)       при х Є (-2,4]\n");
	printf("       sqrt(ax+b)    при x Є (4,9)\n");
	printf("       x^3 - bx +3   при x = 9\n");
	printf("\nВведіть значення a: ");
	scanf_s("%f", &a);
	printf("\nВведіть значення b: ");
	scanf_s("%f", &b);
	printf("\nВведіть значення x: ");
	scanf_s("%f", &x);
	ind = 0;
	if (x > -2 && x <= 4)
		y = cos(x); ind = 1;/*Особливостей нема*/
	if (x > 4 && x < 9 && a * x + b >=0)/*Другий проміжок , ОДЗ не порушено - вираз під коренем більше нуля*/
	    y = sqrt(a * x + b); ind = 1;
	if (x > 4 && x < 9 && a * x + b < 0)/*Другий проміжок , ОДЗ порушено - вираз під коренем менше або дорівнює нулю*/
	{
		printf("Під коренем недодатній вираз"); 
	}
	if (x == 9)
		y = x *(x * x – b) + 3;/*Особливостей нема*/
	if (x <= 2 || x > 9) {
		printf("Значення x задано поза проміжком");
		
	}
	if (ind)
		printf("f(%4.2f) = %6.3f", x, y);/*Виведення результатів обчислень*/
	printf("\n\n");/*Затримка вікна виведення*/
	system("pause");
	return 0;
}


// 2 part 


Лабораторна робота №5.2. Вкладена перевірка умов*/
#include<stdio.h>/*підмикання бібліотеки stdio.h, використовує printf, scanf */
#include<stdlib.h>>/*підмикання бібліотеки stdlib.h, використовує system*/
#include<math.h>/*підмикання бібліотеки math.h, використовує sqrt, cos*/

int main()
{
	float x, y, a, b;/*Введення змінних*/
	int nom;
	system("chcp 1251 & cls");
	/*Виведення вигляду функції на екран*/
	printf("f(x) = cos (x)        при х Є (-2,4]\n");
	printf("       sqrt(ax+b)     при x Є (4,9)\n");
	printf("       x^3 - bx +3    при x = 9\n");
	printf("\nВведіть значення a: ");
	scanf_s("%f", &a);
	printf("\nВведіть значення b: ");
	scanf_s("%f", &b);
	printf("\nВведіть значення x: ");
	scanf_s("%f", &x);
	nom = 0;
	if (x > -2 && x <= 4) //Перший проміжок - особливостей нема
		y = cos(x);
	else
		if ((x > 4) && (x < 9))//Другий проміжок
			if (a*x+b<0) nom = 1;//Під коренем недодатній вираз
			else y = sqrt(a * x + b);// ОДЗ не порушено
		else
	if (x == 9)//Третій проміжок - особливостей нема
		y = x * (x * x – b) + 3;
	else
		nom = 2;
	/*Друк результату обчислення*/
	switch (nom) {
	    case 1: printf("Під коренем недодатній вираз"); break;
	    case 2: printf("Значення х задано поза проміжком "); break;
	    default: printf("f(%2.3f)=%4.4f", x, y);
          }
		printf("\n\n");/*Затримка вікна виведення*/
		system("pause");
		return 0;
	
      }


